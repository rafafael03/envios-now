<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".activity.ui.perfil.PerfilFragment">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="175dp"
        android:layout_height="175dp"
        app:layout_constraintBottom_toTopOf="@+id/textNome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_pessoa_grande_branco_175" />

    <TextView
        android:id="@+id/textNome"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/borda_redonda"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/paddin_padrao"
        android:text="TextView"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/textEmail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5" />

    <TextView
        android:id="@+id/textEmail"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@drawable/borda_redonda"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/paddin_padrao"
        android:text="TextView"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/textRG"
        app:layout_constraintEnd_toEndOf="@+id/textNome"
        app:layout_constraintStart_toStartOf="@+id/textNome"
        app:layout_constraintTop_toBottomOf="@+id/textNome" />

    <TextView
        android:id="@+id/textRG"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@drawable/borda_redonda"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/paddin_padrao"
        android:text="TextView"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/textVeiculo"
        app:layout_constraintEnd_toEndOf="@+id/textEmail"
        app:layout_constraintStart_toStartOf="@+id/textEmail"
        app:layout_constraintTop_toBottomOf="@+id/textEmail" />

    <TextView
        android:id="@+id/textVeiculo"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@drawable/borda_redonda"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/paddin_padrao"
        android:text="TextView"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/textCpf"
        app:layout_constraintEnd_toEndOf="@+id/textRG"
        app:layout_constraintStart_toStartOf="@+id/textRG"
        app:layout_constraintTop_toBottomOf="@+id/textRG" />

    <TextView
        android:id="@+id/textCpf"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:background="@drawable/borda_redonda"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/paddin_padrao"
        android:text="TextView"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textVeiculo"
        app:layout_constraintStart_toStartOf="@+id/textVeiculo"
        app:layout_constraintTop_toBottomOf="@+id/textVeiculo" />

</androidx.constraintlayout.widget.ConstraintLayout>